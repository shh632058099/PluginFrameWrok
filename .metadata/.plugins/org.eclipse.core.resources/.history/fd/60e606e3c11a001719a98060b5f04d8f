#include "module.h"

Module::Module(const std::string &strName)
:m_pController(NULL),
 m_pView(NULL)
{
	m_pController = new CControllerBase();
	m_pView = new CViewBase(m_pController);
}

Module::~Module(void)
{
	if (m_pView != NULL)
	{
		delete m_pView;
		m_pView = NULL;
	}

	if (m_pController != NULL)
	{
		delete m_pController;
		m_pController = NULL;
	}
}

