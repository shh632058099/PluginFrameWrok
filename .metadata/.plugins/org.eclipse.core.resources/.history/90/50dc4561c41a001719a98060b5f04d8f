#pragma once

#include "Export.h"

class CControllerBase;
class CViewBase;


class PLUGINCORE_API Module
{
public:
	explicit Module(const std::string &strName);
	virtual ~Module(void);

	//加载模块
	virtual bool Load() = 0;

	//卸载模块
	virtual bool UnLoad() = 0;

	//返回插件名字，带后缀，如dll等
	virtual std::string GetFileName() const = 0;

	//返回插件的名字，不带后缀
	virtual std::string GetDisplayName() const = 0;


private:
	Module(const Module &rhs);
	const Module &operator=(const Module &rhs);

	bool Init();

private:
	typedef std::shared_ptr<CControllerBase> ControllerSharedPtr;
	ControllerSharedPtr m_pController;

	typedef std::shared_ptr<CViewBase> ViewSharedPtr;
	ViewSharedPtr m_pView;
};

//插件加载和卸载时调用的函数
typedef Module *( *START_PLUGIN_FUN )();
typedef void( *STOP_PLUGIN_FUN )();

