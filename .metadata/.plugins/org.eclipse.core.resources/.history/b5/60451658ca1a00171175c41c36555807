bool Module::Init()
{
	ControllerSharedPtr controler(CreateController());
	m_pController = controler;
	if (!m_pController)
	{
		LOGERR("Create Controller failed");
		return -1;
	}

	ViewSharedPtr view(CreateView());
	m_pView = view;
	if (!m_pView)
	{
		LOGERR("Create View failed");
		return -1;
	}

	m_pView->AttachController(m_pController);

	if (m_pController)
	{
		m_pController->Init();
	}

	if (m_pView)
	{
		m_pView->Init();
	}
	return true;
}

